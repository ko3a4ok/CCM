<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="5dp"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:visibility="gone"
        android:id="@+id/cluster_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#000"
        android:id="@+id/cluster_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/cluster_name"
        android:id="@+id/cluster_desc"
        android:textColor="#777"
        android:textSize="10sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_below="@+id/cluster_desc"
        android:id="@+id/created_at"
        android:textColor="#777"
        android:textSize="10sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_aws"
        android:scaleType="centerInside"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/cluster_status"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textSize="10sp"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>